{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowJs": false,
    "baseUrl": ".",
    "paths": {
      "Util/*": ["src/util/*"],
      "Core/*": ["src/core/*"]
    }
  },
  "include": ["src/**/*", "types/**/*"]
}
